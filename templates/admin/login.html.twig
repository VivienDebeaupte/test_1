{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .form-signin {
            width: 100%;
            max-width: 330px;
            padding: 15px;
            margin: auto;
            margin-top: 15%;
        }

        .form-signin .checkbox {
            font-weight: 400;
        }

        .form-signin .form-floating:focus-within {
            z-index: 2;
        }

        .form-signin input[type="email"] {
            margin-bottom: -1px;
            border-bottom-right-radius: 0;
            border-bottom-left-radius: 0;
        }

        .form-signin input[type="password"] {
            margin-bottom: 10px;
            border-top-left-radius: 0;
            border-top-right-radius: 0;
        }
    </style>
{% endblock %}

{% block body %}
    <main class="form-signin">

        <form action="{{ path('admin_login') }}" method="post">
            <h4 class="text-center mb-3 fw-normal">Administrator dashboard</h4>

            <div class="form-floating">
                <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}"/>
                <label for="username">Username</label>
            </div>
            <div class="form-floating">
                <input type="password" class="form-control"  id="password" name="_password"/>
                <label for="password">Password</label>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
        </form>
        <a href="{{ path('home') }}" class="" aria-expanded="true">
            Back to HomePage
        </a>

        {% if error %}
            <div class="alert alert-warning mt-2 text-center">
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            </div>
        {% endif %}

    </main>
{% endblock %}